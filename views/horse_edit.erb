<%= erb :sidebar, :layout=>false %>
  <div>
    <ul class="breadcrumb">
      <li><a href="/horses">Horses</a><span class="divider">/</span></li>
      <li class="active"><%=h @horse['name'] %></li>
    </ul>
  </div>

  
  <div class="row-fluid">
    <div class="span12 column" id="col1">
      <div class="box" id="box2">
	<h4 class="box-header round-top">編集</h4>
	<div class="box-container-toggle">
	  <div class="box-content">
	    <form action="/horse/update/<%=h @horse['nkid']%>" method="POST">
	      <table class="table table-striped table-condensed">
		<input type="hidden" name="_method" value="PUT">
		<input type="hidden" name="nkid" value="<%=h @horse['nkid']%>">
		  <tr><th>馬名</th><td><input type="text" name="name" value="<%=h @horse['name']%>"></td></tr>
		  <tr><th>状態</th><td>
		    <select class="span2" name="status" id="status">
		      <% if @horse['retired'] %>
		      <option value="active">現役</option>
		      <option value="retired" selected>引退</option>
		      <% else %>
		      <option value="active">現役</option>
		      <option value="retired">引退</option>
		      <% end %>
		    </select>
		    </td></tr>
		  <tr><th>性別</th><td><input type="text" name="sex" value="<%=h @horse['sex']%>"></td></tr>
		  <tr><th>調教師</th><td><input type="text" name="trainer" value="<%=h @horse['trainer']%>"></td></tr>
		  <tr><th>地域</th><td><input type="text" name="area" value="<%=h @horse['area']%>"></td></tr>
		  <tr><th>父</th><td><input type="text" name="father" value="<%=h @horse['father']%>"></td></tr>
		  <tr><th>母</th><td><input type="text" name="mother" value="<%=h @horse['mother']%>"></td></tr>
		  <tr><th>母父</th><td><input type="text" name="bms" value="<%=h @horse['bms']%>"></td></tr>
		  <tr><th>馬主</th><td><input type="text" name="real_owner" value="<%=h @horse['real_owner']%>"></td></tr>
		  <tr><th>生産</th><td><input type="text" name="farm" value="<%=h @horse['farm']%>"></td></tr>
	      </table>
	      <button type="submit" class="btn">Update</button>
	    </form>
	  </div>
	</div>
      </div>
    </div><!-- /span12 column -->
  </div><!-- row-fluid -->
  <%= erb :sidebar_close, :layout=>false %>