<%= erb :sidebar, :layout=>false %>
  <div>
    <ul class="breadcrumb">
      <li><a href="/races">Races</a><span class="divider">/</span></li>
      <li><%=h @r['name'] %>/</li>
      <li><%=h @r.result['name'] %></li>
    </ul>
  </div>

  
  <div class="row-fluid">
    <div class="span12 column" id="col1">
      <div class="box" id="box2">
	<h4 class="box-header round-top">編集</h4>
	<div class="box-container-toggle">
	  <div class="box-content">
	    <form action="/race/update/<%=h @r['race_id'] %>?horse=<%=h @r.result['nkid'] %>" method="POST">
	      <input type="hidden" name="_method" value="PUT">
	      <input type="hidden" name="rid" value="<%=h @r['race_id'] %>">
	      <input type="hidden" name="nkid" value="<%=h @r.result['nkid'] %>">
	      <table class="table table-striped table-condensed">
		<tr><th>日付</th><td><%=h @r['race_date'] %></td></tr>
		<tr><th>天気</th><td><%=h @r['wheather'] %></td></tr>
		<tr><th>開催</th><td><%=h @r['place'] %>&nbsp;<%=h @r['race_num'] %>R</td></tr>
		<tr><th>レース名</th><td><%=h @r['name'] %></td></tr>
		<tr><th>距離</th><td><%=h @r['length'] %>/<%=h @r['condition'] %></td></tr>
		<tr><th>馬名</th><td><%=h @r.result['name'] %></td></tr>
		<tr><th>馬番/枠番/頭</th><td><%=h @r.result['post'] %>/<%=h @r.result['position'] %>/<%=h @r['horses_num'] %></td></tr>
		<tr><th>オッズ</th><td><%=h @r.result['odds'] %></td></tr>
		<tr><th>着/人気</th><td><%=h @r.result['place'] %>/<%=h @r.result['popularity'] %></td></tr>
		<tr><th>騎手/所有者</th><td><%=h @r.result['jocky'] %>/<%=h @owner %></td></tr>
		<tr><th>斤量</th><td><%=h @r.result['weight'] %></td></tr>
		<tr><th>賞金</th><td><input type="text" name="prize" value="<%=h @r.result['prize'] %>"></td></tr>
	      </table>
	      <button type="submit" class="btn">Update</button>
	    </form>
	  </div>
	</div>
      </div>
    </div><!-- /span12 column -->
  </div><!-- row-fluid -->
  <%= erb :sidebar_close, :layout=>false %>
  