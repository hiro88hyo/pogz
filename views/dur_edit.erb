<%= erb :sidebar, layout=>false %>
  <div>
    <ul class="breadcrumb">
      <li>Durations</li>
    </ul>
  </div>
  
  <div class="row-fluid">
    <div class="span12 column" id="col1">
    <form method="post" action="duration/<%=h @id %>" name="edit">
      <input type="hidden" name="_method" value="UPDATE">
      <label>Duration Type</label>
      <input type="text" class="span3" name="dtype" placeholder="Enter duration identifier">
      <label>Duration Name</label>
      <input type="text" class="span3" name="name"  placeholder="Enter duration name">
      <label>Start Date</label>
      <input type="text" class="span3" name="start" placeholder="Enter Start Date">
      <label>End Date</label>
      <input type="text" class="span3" name="end"   placeholder="Enter End Date">
      <a href="#" class="btn">Update</a>
    </form>
    </div><!-- /span12 column -->
  </div><!-- row-fluid -->
  <%= erb :sidebar_close, layout=>false %>