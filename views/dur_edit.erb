<%= erb :sidebar, :layout=>false %>
  <div>
    <ul class="breadcrumb">
      <li>Durations</li>
    </ul>
  </div>
  
  <div class="row-fluid">
    <div class="span12 column" id="col1">
      <div class="box" id="box2">
	<h4 class="box-header round-top">編集</h4>
	<div class="box-container-toggle">
	  <div class="box-content">

      <% if @update %>
      <form method="post" action="/duration/update/<%=h @id %>" name="edit">
      <% else  %>
      <form method="post" action="/duration/new" name="edit">
      <% end %>
	<input type="hidden" name="_method" value="<%=h @method %>">
	<table class="table table-striped table-condensed">
	  <tr><th>Duration Type</th><td><input type="text" class="span3" name="dtype" value="<%=h @dur.dtype %>" placeholder="Enter duration identifier"></td></tr>
	  <tr><th>Duration Name</th><td><input type="text" class="span3" name="name" value="<%=h @dur.name %>"  placeholder="Enter duration name"></td></tr>
	  <tr><th>Start Date</th><td><input type="date" class="span3" name="start" value="<%=h @dur.start %>" placeholder="Enter Start Date"></td></tr>
	  <tr><th>End Date</th><td><input type="date" class="span3" name="end"  value="<%=h @dur.end %>"  placeholder="Enter End Date"></td></tr>
	  <tr><td colspan="2"><button type="submit" class="btn">Update</button></form>
      
    <% if @update %>
      <form method="post" action="/duration/delete/<%=h @id %>" name="edit">
	<input type="hidden" name="_method" value="DELETE">
	<button type="submit" class="btn">Delete</button>
      </form>
      
      <% end %></td></tr>
    </table>
    </div>
	</div>
      </div>
    </div><!-- /span12 column -->
  </div><!-- row-fluid -->

  <%= erb :sidebar_close, :layout=>false %>