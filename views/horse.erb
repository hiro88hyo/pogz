<%= erb :sidebar, :layout=>false %>
  <div>
    <ul class="breadcrumb">
      <li><a href="/horses">Horses</a><span class="divider">/</span></li>
      <li class="active"><%=h @horse['name'] %></li>
    </ul>
  </div>
  <div class="row-fluid">
    <div class="span6 column" id="col1">
      <div class="box" id="box1">
	<h4 class="box-header round-top">
	  <%=h @horse['name'] %>（<%=h @horse['sex'] %>）
	  &nbsp;&nbsp;<%=h @horse['year'] %>年生
	  &nbsp;&nbsp;<%=h @horse['owner'] %>
	  &nbsp;<%=h @horse['seq'] %>位
	  <%if @horse['retired'] %>（引退）<% end %>
	</h4>
	<div class="box-container-toggle">
	  <div class="box-content">
	    <table class="table table-striped table-condensed">
	      <tr><th>調教師</th><td><%=h @horse['trainer'] %></td></tr>
	      <tr><th>馬主</th><td><%=h @horse['real_owner'] %></td></tr>
	      <tr><th>生産者</th><td><%=h @horse['farm'] %></td></tr>
	      <tr><th>獲得賞金</th><td><%=to_c @results[0]['prize'].to_i %>万円</td></tr>
	      <tr><th>通算成績</th>
		<td><%=h @results[0]['races'] %>戦
		  <%=h @results[0]['p1'] %>勝
		  [<%=h @results[0]['p1'] %>-
		  <%=h @results[0]['p2'] %>-
		  <%=h @results[0]['p3'] %>-
		  <%=h @results[0]['p4'] %>-
		  <%=h @results[0]['p5'] %>]
		</td></tr>
	      <tr><td colspan="2" style="text-align: right;"><a href="/horse/edit/<%=h @horse['nkid']%>"><i class="icon-pencil"></i></a>&nbsp;<i class="icon-trash"></i></td></tr>
	    </table>
	  </div><!-- /box-content -->
	</div><!-- /box-container-toggle -->
      </div><!-- /box -->
    </div><!-- /span6 -->

    <div class="span6 column" id="col1">
      <div class="box" id="box1">
	<h4 class="box-header round-top">血統</h4>
	<div class="box-container-toggle">
	  <div class="box-content">
	    <table class="table table-striped table-condensed">
	      <tr><th>父</th><td><%=h @horse['father'] %></td></tr>
	      <tr><th>母</th><td><%=h @horse['mother'] %></td></tr>
	      <tr><th>母父</th><td><%=h @horse['bms'] %></td></tr>
	    </table>
	  </div><!-- /box-content -->
	</div><!-- /box-container-toggle -->
      </div><!-- /box -->
    </div><!-- /span6 -->
  </div><!-- /row-fluid -->
  <div class="row-fluid">
    <div class="span12 column" id="col1">
      <div class="box" id="box1">
	<h4 class="box-header round-top">レース結果</h4>
	<div class="box-container-toggle">
	  <div class="box-content">
            <table class="table table-striped table-condensed">
              <tr><th>日付</th>
		<th>天気</th>
		<th>開催</th>
		<th>R</th>
		<th>レース名</th>
		<th>頭数</th>
		<th>枠</th>
		<th>馬番</th>
		<th>オッズ</th>
		<th>人気</th>
		<th>順位</th>
		<th>騎手</th>
		<th>斤量</th>
		<th>距離</th>
		<th>状態</th>
		<th>賞金</th>
		<th></th></tr>
	      <% for race in @races %>
              <tr>
                <td><% if race['r_isCount']=='false' then %>-<% end %><%=h race['race_date'] %></td>
                <td><%=h race['wheather'] %></td>
                <td><%=h race['place'] %></td>
                <td style="text-align: right;"><%=h race['race_num'] %>R</td>
                <td><%=h race['name'] %></td>
                <td style="text-align: right;"><%=h race['horses_num'] %></td>
                <td style="text-align: right;"><%=h race['r_post'] %></td>
                <td style="text-align: right;"><%=h race['r_position'] %></td>
                <td style="text-align: right;"><%=h race['r_odds'] %></td>
                <td style="text-align: right;"><%=h race['r_popularity'] %></td>
                <td style="text-align: right;"><%=h race['r_place'] %></td>
                <td><%=h race['r_jocky'] %></td>
                <td style="text-align: right;"><%=h race['r_weight'] %></td>
                <td><%=h race['length'] %></td>
                <td><%=h race['condition'] %></td>
                <td style="text-align: right;"><%=to_c race['r_prize'].to_i %>万円</td>
		<td><a href="/race/edit/<%=h race['rid'] %>?horse=<%=h race['r_nkid'] %>"><i class="icon-pencil"></i></a></td>
              </tr>
	      <% end %>
            </table>
	  </div><!-- /box-content -->
	</div><!-- /box-container-toggle -->
      </div><!-- /box -->
    </div><!-- /span12 -->
  </div><!-- /row-fluid -->
  <%= erb :sidebar_close, :layout=>false %>
