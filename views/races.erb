<%= erb :sidebar, layout=>false %>
  <div>
    <ul class="breadcrumb">
      <li>Races</li>
    </ul>
  </div>
  
  <div class="row-fluid">
    <div class="span12 column" id="col1">
	  <div class="box" id="box1">
	    <h4 class="box-header round-top">過去の成績</h4>
	    <div class="box-container-toggle">
	      <div class="box-content">
            <table class="table table-striped table-condensed" id="races">
              <tr><th>日付</th>
		          <th>天気</th>
		          <th>開催</th>
		          <th>レース名</th>
		          <th>距離</th>
		          <th>馬名</th>
		          <th>頭数</th>
		          <th>枠</th>
		          <th>馬番</th>
		          <th>オッズ</th>
		          <th>人気</th>
		          <th>順位</th>
		          <th>騎手</th>
		          <th>斤量</th>
		          <th>賞金</th>
		      </tr>
	          <% for race in @recent %>
              <tr>
                <td><%=h race['race_date'] %></td>
                <td><%=h race['wheather'] %></td>
                <td><%=h race['place'] %>&nbsp;<%=h race['race_num'] %>R</td>
                <td><%=h race['name'] %></td>
                <td><%=h race['length'] %>/<%=h race['condition'] %></td>
                <td><a href="/horse/<%=h race['r_nkid'] %>"><%=h race['r_hname'] %></a></td>
                <td style="text-align: right;"><%=h race['horses_num'] %></td>
                <td style="text-align: right;"><%=h race['r_post'] %></td>
                <td style="text-align: right;"><%=h race['r_position'] %></td>
                <td style="text-align: right;"><%=h race['r_odds'] %></td>
                <td style="text-align: right;"><%=h race['r_popularity'] %></td>
                <td style="text-align: right;"><%=h race['r_place'] %></td>
                <td><%=h race['r_jocky'] %></td>
                <td style="text-align: right;"><%=h race['r_weight'] %></td>
                <td style="text-align: right;"><%=to_c race['r_prize'].to_i %>万円</td>
              </tr>
	          <% end %>
            </table>
          </div><!-- /box-content -->
        </div><!-- /box-container-toggle -->
      </div><!-- /box -->
    </div><!-- /span12 column -->
  </div><!-- row-fluid -->
  <%= erb :sidebar_close, layout=>false %>
